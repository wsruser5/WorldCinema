<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainScreen.SignIn"
    android:background="@color/colorPrim">

    <ImageView
        android:layout_width="207dp"
        android:layout_height="134dp"
        android:src="@drawable/logo_and_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="132dp"/>

    <EditText
        android:id="@+id/etSignInEmail"
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:hint="E-mail"
        android:layout_marginTop="370dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/bg_sign_et"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/etSignInPassword"
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:hint="Пароль"
        android:textColor="@color/white"
        android:layout_marginTop="430dp"
        android:layout_gravity="center_horizontal"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/bg_sign_et"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btSignInLogIn"
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_btn_sign"
        android:layout_gravity="center_horizontal"
        android:text="Войти"
        android:textAllCaps="false"
        android:textColorHint="@color/white"
        android:layout_marginTop="600dp"/>

    <Button
        android:id="@+id/btSignInRegister"
        android:layout_width="343dp"
        android:layout_height="44dp"
        android:text="Регистрация"
        android:textColor="@color/colorAcc"
        android:background="@drawable/bg_sign_et"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="660dp"
        android:textAllCaps="false"/>

</FrameLayout>